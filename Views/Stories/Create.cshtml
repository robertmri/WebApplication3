@model WebApplication3.Models.Story

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Write a Story</h2>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Title</label>
        <textarea asp-for="Title" cols="45" rows="1" class="form-control"></textarea>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Genre</label>
        <select name="Genre" class="form-control">
            <option value="" selected disabled hidden>Select the genre which matches your story the closest</option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Classic">Classic</option>
            <option value="Comedy">Comedy</option>
            <option value="Fable">Fable</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Horror">Horror</option>
            <option value="Mystery">Mystery</option>
            <option value="Mythology">Mythology</option>
            <option value="Science Fiction">Science Fiction</option>
            <option value="Suspense/Thriller">Suspense/Thriller</option>
            <option value="Western">Western</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Your Story</label>
        <textarea asp-for="Content" cols="45" rows="20" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
</form>

