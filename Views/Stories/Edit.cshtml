@model WebApplication3.Models.Story

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Story</h2>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProfileId" />
    <input type="hidden" asp-for="Author" />
    <input type="hidden" asp-for="Likes" />
    <input type="hidden" asp-for="CreationDate" />
    <div class="form-group">
        <label class="control-label">Title</label>
        <textarea asp-for="Title" cols="45" rows="1" class="form-control"></textarea>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Genre</label>
        <select name="Genre" class="form-control">
            <option selected="@Model.Genre">@Model.Genre</option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Classic">Classic</option>
            <option value="Comedy">Comedy</option>
            <option value="Fable">Fable</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Horror">Horror</option>
            <option value="Mystery">Mystery</option>
            <option value="Mythology">Mythology</option>
            <option value="Science Fiction">Science Fiction</option>
            <option value="Suspense/Thriller">Suspense/Thriller</option>
            <option value="Western">Western</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Your Story</label>
        <textarea asp-for="Content" cols="45" rows="20" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

